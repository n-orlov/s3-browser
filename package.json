{
  "name": "s3-browser",
  "version": "0.18.2",
  "description": "Lightweight desktop S3 file browser",
  "main": "dist/main/index.js",
  "author": "Nikolai Orlov",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "start": "npm run build && electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npm run build && xvfb-run --auto-servernum --server-args=\"-screen 0 1280x960x24\" playwright test",
    "test:e2e:headed": "npm run build && playwright test --headed",
    "test:e2e:report": "playwright show-report playwright-report",
    "package": "npm run build && npx electron-builder --linux",
    "package:win": "npm run build && npx electron-builder --win",
    "package:win:docker": "./scripts/build-windows.sh",
    "package:mac": "npm run build && npx electron-builder --mac",
    "package:mac:unsigned": "npm run build && npx electron-builder --mac -c.mac.identity=null",
    "package:mac:script": "./scripts/build-macos.sh",
    "package:all": "npm run build && npx electron-builder --win --mac --linux",
    "package:all:docker": "./scripts/build-all.sh"
  },
  "build": {
    "appId": "org.github.n-orlov.s3-browser",
    "productName": "S3 Browser",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.978.0",
    "@aws-sdk/credential-providers": "^3.978.0",
    "@monaco-editor/react": "^4.7.0",
    "hyparquet": "^1.24.1",
    "monaco-editor": "^0.55.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-vitest": "^7.0.1",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
